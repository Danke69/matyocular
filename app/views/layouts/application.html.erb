<!DOCTYPE html>
<html>
  <head>
    <title>Matyoclar</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/4252c4d753.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <nav class="navbar navbar-expand-lg navbar-light bg-warning">
          <div class="container">
            <div class="row">
              <div class="col-3">
                <li>
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                </li>
              </div>
              <div class="col-3">
                <li>
                  <%= link_to "マイページ", user_path(current_user) %>
                </li>
              </div>
              <div class="col-3">
                <li>
                  <%= link_to "目標設定", edit_user_path(current_user) %>
                </li>
              </div>
              <div class="col-3">
                <li>
                  <%= link_to "トレーニング", new_training_path %>
                </li>
              </div>
              <div class="col-3">
                 <li>
                  <%= link_to "筋トレ一覧", trainings_path %>
                </li>
              </div>
              <div class="col-3">
                <li>
                  <%= link_to "投稿一覧", posts_path %>
                </li>
              </div>
            </div>
          </div>
        </nav>
      <% end %>
    </header>
      <div class="container">
        <%= yield %>
      </div>
  </body>
</html>
