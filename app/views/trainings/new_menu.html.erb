
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 pt-5 mx-auto">
      <%= form_with model: @training, url: new_detail_trainings_path do |f| %>
        <div class="form-group">
          <%= f.text_field :training_date %>
          <%= f.collection_select :training_menu_id, @menus, :id, :item, {}, {} %>
          <%= f.hidden_field :list_id %>
          <%= f.submit "次へ" %>
        </div>
      <% end %>
      <div class="col"><%= link_to "部位の追加", new_list_path %></div>
      <div class="col"><%= link_to "種目の追加", new_training_menu_path %></div>
    </div>
  </div>
</div>