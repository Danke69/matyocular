<div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 pt-5 mx-auto">
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, id:"Name", class: "form-control" %>            
          </div>
          <div class="form-group">
            <label for="profile">profile</label>
            <%= f.file_field :profile_image, id:"profile", class: "form-control-file user_image" %>            
          </div>
          <div class="form-group">
            <label for="intro">プロフィール</label>
            <%= f.text_area :introduction, id:"intro", class: "form-control introduction" %>            
          </div>
          <div class="form-group">
            <label for="goal">目標</label>
            <%= f.text_area :goal, id:"goal", class: "form-control goal" %>            
          </div>
          <div class="form-group">
            <%= f.submit 'いっきまーす!' %>
          </div>
        <% end %>
      </div>
    </div>
</div>

