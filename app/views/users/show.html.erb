<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h4>プロフィール</h4>
  <h5><%= @user.introduction %></h5>
  <h4>目標</h4>
  <h5><%= @user.goal %></h5>
